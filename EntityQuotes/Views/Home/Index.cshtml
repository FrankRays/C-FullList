@{
    ViewData["Title"] = "Quoting Dojo";
}
@model EntityQuotes.Models.RegisterViewModel

<h2>Welcome to Quoting Dojo</h2>

<form asp-action="index" method="POST">
    <label asp-for="username">Your name: </label> 
    <input asp-for="username"/>
    <label asp-for="quote">Your Quote: </label>
    <input asp-for="quote"/>
    <button type="submit">Post Quote</button>
</form>
<div style="color:red;" asp-validation-summary="All"></div>
<div class="error">
    @{
        if(ViewBag.errors != null ){
        foreach(var error in ViewBag.errors){
            if(@error.Errors.Count > 0){
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
        }
    }
</div>