@{
    ViewData["Title"] = "Quoting Dojo";
}
<h2>Welcome to Quoting Dojo</h2>
<ul>
    <form action="Quotes" method="POST">
    <li>Your name: <input type="text" name="username"></li>
    <li>Your Quote: <input type="text" style="height:20em;" name="quote"></li>
    <li><input class="button" type="submit" value="Add my Quote"></form><a href="DisplayQuotes"><button>Skip to Quotes!</button></a></li>
</ul>
<div class="error">
    @{
        if(ViewBag.errors != null ){
        foreach(var error in ViewBag.errors){
            if(@error.Errors.Count > 0){
                <p>@error.Errors[0].ErrorMessage</p>
            }
        }
        }
    }
</div>